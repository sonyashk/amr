package org.example;

import java.util.ArrayList;

public class Task2 {
    public static void main(String[] args) {
        String input = "I have 3 cats, 4 dogs, and 1 turtle";

        // Список для хранения цифр
        ArrayList<Integer> digitList = new ArrayList<>();

        // Перебираем каждый символ строки
        for (char ch : input.toCharArray()) {
            if (Character.isDigit(ch)) {
                // Преобразуем символ цифры в число и добавляем в список
                digitList.add(Character.getNumericValue(ch));
            }
        }

        // Преобразуем список в массив
        int[] digits = digitList.stream().mapToInt(Integer::intValue).toArray();

        // Вывод массива
        System.out.println("Извлеченные цифры:");
        for (int digit : digits) {
            System.out.print(digit + " ");
        }
    }
}
